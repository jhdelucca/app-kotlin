<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:orientation="vertical"
                                              tools:context=".ReportPedidoActivity">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pedido de Venda"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Emissão: "/>

        <TextView
                android:id="@+id/dt_emissao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28/10/2022"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  -  "/>

        <TextView
                android:id="@+id/hora_emissao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:26:00"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">


        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente: "
                    android:textSize="12sp"/>

            <TextView
                    android:id="@+id/recebe_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="recebe informações do cadastro de cliente"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:textStyle="bold"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço: "
                    android:textSize="12sp"/>

            <TextView
                    android:id="@+id/recebe_endereco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RUA BARAO DO RIO BRANCO                      , 461        - CENTRO"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:textStyle="bold"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Telefone: "
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/recebe_telefone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(31)99999-9999"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="end">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UF: "
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/recebe_uf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MG "
                        android:textSize="12sp"
                        android:textStyle="bold"/>

            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pagamento: "
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/recebe_pagamento"
                        android:layout_width="210dp"
                        android:layout_height="16dp"
                        android:text="CARTAO - 30 dias "
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="end">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:text="Vend: "
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/recebe_vendedor"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:text="manutmac"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:background="@drawable/border_report_pedido"
                    android:layout_marginTop="5dp"
                    >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="QTD" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                    android:layout_weight="1"
                        android:background="@drawable/border_report_pedido"
                        android:text="  PRODUTO"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                    android:layout_weight="4"
                        android:gravity="center"
                        android:text="Vlr.unit"/>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_item_ped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_report_pedido"
                tools:ignore="DuplicateIds"
                tools:listitem="@layout/report_pedido_adapter"
                tools:viewBindingType="androidx.recyclerview.widget.RecyclerView"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_report_pedido"
                android:gravity="end"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Valor Total"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_report_pedido"
                    android:gravity="end">

                <TextView
                        android:id="@+id/recebe_valor_pedido"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:text="99999,999"/>

            </LinearLayout>
        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>

