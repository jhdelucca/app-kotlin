<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#6D2D78"
    android:orientation="horizontal" android:padding="12dp" android:id="@+id/cabecalho">

        <ImageView android:layout_width="0dp" android:layout_height="32dp" android:src="@drawable/ic_all"
        android:layout_weight="1"/>

        <ImageView android:layout_width="0dp" android:layout_height="32dp" android:src="@drawable/ic_emojji"
                   android:layout_weight="1"/>

        <ImageView android:layout_width="0dp" android:layout_height="32dp" android:src="@drawable/ic_sun"
                   android:layout_weight="1"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ola Kotlin"
              android:layout_marginTop="12dp"  android:layout_below="@+id/cabecalho"
              android:layout_centerHorizontal="true"
    android:textStyle="bold"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Um grande texto para
    exemplo teste teste teste teset"  android:textStyle="bold" android:layout_centerInParent="true" android:id="@+id/txt"
    android:padding="12dp"/>

    <View android:layout_width="128dp" android:layout_height="4dp" android:layout_centerHorizontal="true" android:layout_below="@+id/txt" android:background="@color/black"
   />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nova Frase"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_margin="32dp"
            android:backgroundTint="@color/blue" />

</RelativeLayout>